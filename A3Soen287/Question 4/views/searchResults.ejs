<main class="col-md-9 ms-sm-auto col-lg-10 px-md-0 px-0 mb-0 pt-4 mt-5">
    <div class="px-5 py-5 my-5 text-center">
        <h1>Search Results</h1>
        
        <% if (pets.length > 0) { %>
            <div class="album py-5 bg-lightColor">
                <div class="container">
            
                  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <% pets.forEach(pet => { %>
                    <div class="col">
                        <div class="card shadow-sm">
                            <img class="img-fluid" src="https://static.vecteezy.com/system/resources/thumbnails/022/963/918/small_2x/ai-generative-cute-cat-isolated-on-solid-background-photo.jpg"  width="100%" height="225%">
                            <div class="card-body">

                        <h5 class="mb-1"><%= pet[2] %> - <%= pet[3] %></h5>
                        <p class="mb-1">Age: <%= pet[4] %>, Gender: <%= pet[5] %></p>
                        <p class="mb-1">Sociable: <%= pet[6] %>, Suitable for Children: <%= pet[7] %></p>
                        <p class="mb-1">Owner: <%= pet[1] %></p>
                        <p class="mb-1">Brag: <%= pet[8] %></p>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        <% } else { %>
            <p>No pets found matching your criteria.</p>
        <% } %>
    </div>
    </div>
</div>